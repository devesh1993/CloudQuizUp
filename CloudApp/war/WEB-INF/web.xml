<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>SignUp</servlet-name>
		<servlet-class>com.cloud.SignUpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogIn</servlet-name>
		<servlet-class>com.cloud.LogInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogIn</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
        <servlet-name>SelectTopicServlet</servlet-name>
        <servlet-class>com.cloud.SelectTopicServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SelectTopicServlet</servlet-name>
        <url-pattern>/selectTopic</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>ResponseServlet</servlet-name>
        <servlet-class>com.cloud.ResponseServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ResponseServlet</servlet-name>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>
    
      <servlet>
        <servlet-name>PollForQuestionServlet</servlet-name>
        <servlet-class>com.cloud.PollForQuestionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PollForQuestionServlet</servlet-name>
        <url-pattern>/pollForQuestion</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
